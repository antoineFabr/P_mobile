<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PassionLecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PassionLecture"
    Shell.FlyoutBehavior="Disabled"
    Title="PassionLecture">

   
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Livre"
            ContentTemplate="{DataTemplate local:PageLivre}"
            Route="PagedeLivre" />
        <ShellContent
            Title="Recherche"
            ContentTemplate="{DataTemplate local:Recherche}"/>

    </TabBar>
    

</Shell>
